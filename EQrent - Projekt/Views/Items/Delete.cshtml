@model EQrent___Projekt.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EQrent</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <div class="overlay">
        <div class="container mt-5">
            <h1 class="display-4">Delete</h1>
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <div>
                <h4>Item</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ImageUrl)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ItemName)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemName)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ItemType)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemType.Name)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.user)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.user.Id)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
