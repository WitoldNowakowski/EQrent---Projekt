@model EQrent___Projekt.Models.Item

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EQrent</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <div class="overlay">
        <div class="container mt-5">
            <h1 class="display-4">Details</h1>

            <div class="row">
                <div class="col-md-8">
                    <h4>Item</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ItemName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ItemName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ItemType.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ItemType.Name)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="EQ Image" class="img-fluid img-thumbnail" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Rents" asp-action="Create">Rent it</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>
